<scene name="MainScene" version="1.0">

	<templates>
		<template templateId="playerModel" src="models/character.fbx"
               templateDir="templates/playerModel" />
		
		<template templateId="weaponModel" src="models/sword.fbx"
               templateDir="templates/weaponModel" />
	</templates>

	<!-- Asset Loading Block - Declares external resources -->
	<assets>
		<!-- Templates -->
		<template templateId="gun" src="templates/gun.xml" />

		<!-- Materials -->
		<material materialId="metalMat" src="materials/metal.mat" />
		<material materialId="woodMat" src="materials/wood.mat" />

		<!-- Textures -->
		<texture2D textureId="skyboxTex" src="textures/skybox.hdr" />
		<texture2D textureId="grassTex" src="textures/grass.png" />


	</assets>

	<assets>
		<mesh meshId="tank_low_poly.Cylinder_001" src="scenes/templates/tank/Cylinder_001.mesh" />
		<mesh meshId="tank_low_poly.Cube" src="scenes/templates/tank/Cube.mesh" />
		<mesh meshId="tank_low_poly.Cylinder_012" src="scenes/templates/tank/Cylinder_012.mesh" />
		<mesh meshId="tank_low_poly.Cube_001" src="scenes/templates/tank/Cube_001.mesh" />
		<mesh meshId="tank_low_poly.Cube_003" src="scenes/templates/tank/Cube_003.mesh" />
		<mesh meshId="tank_low_poly.Cylinder_002" src="scenes/templates/tank/Cylinder_002.mesh" />
		<mesh meshId="tank_low_poly.Cylinder_003" src="scenes/templates/tank/Cylinder_003.mesh" />
		<mesh meshId="tank_low_poly.BezierCircle_002" src="scenes/templates/tank/BezierCircle_002.mesh" />
		<mesh meshId="cubeModel.Cube" src="scenes/templates/tank/Cube.mesh" />
		<material materialId="cubeModel.Material_001" src="scenes/templates/tank/Material_001.mat" />
		<material materialId="cubeModel.Material" src="scenes/templates/tank/Material.mat" />
		<material materialId="tank_low_poly.Body" src="scenes/templates/tank/Body.mat" />
		<material materialId="tank_low_poly.Material" src="scenes/templates/tank/Material.mat" />

		<shader assetId="PBR_Standard" srcVert="shaders/standard.vert" srcFrag="shaders/standard.frag"/>
	</assets>

	<!-- Scene Entities Definition -->
	<entities>

	

		<!-- Player Character Model Entity -->
		<entity id="playerCharacter" name="Player Character" templateId="playerModel" position="0,0,0" rotation="0,0,0" scale="1,1,1">
			

			<components>
				<scriptComponent>
					<script scriptId="playerHealthScript" src="scripts/PlayerHealth.cs" />
					<script scriptId="playerInventoryScript" src="scripts/PlayerInventory.cs" />
				</scriptComponent>
			</components>
		</entity>

		<!-- Enemy Character Model Entity -->
		<entity id="enemyGuard01" name="Enemy Guard 01" templateId="playerModel" position="15,0,10" rotation="0,180,0" scale="1,1,1">


			<components>
				<scriptComponent>
					<script scriptId="enemyHealthScript" src="scripts/EnemyHealth.cpp" />
				</scriptComponent>
			</components>
		</entity>

		<!-- Village House -->
		<entity id="villageHouse" name="Village House" templateId="buildingModel" position="10,0,5" rotation="0,45,0" scale="1,1,1">
			
		</entity>

		<!-- Blacksmith Shop -->
		<entity id="blacksmithShop" name="Blacksmith Shop" templateId="buildingModel" position="20,0,10" rotation="0,90,0" scale="1.2,1,1.2">

		</entity>

		<!-- Main Camera -->
		<entity id="mainCamera" name="Main Camera" position="0,5,10" rotation="0,0,0" scale="1,1,1">
			<components>
				<camera
                    fov="60"
                    near="0.1"
                    far="1000" />
			</components>
		</entity>

		<!-- Sun Light -->
		<entity id="sunLight" name="Sun Light" position="0,10,0" rotation="45,30,0" scale="1,1,1">
			<components>
				<light
                    type="directional"
                    color="1,1,0.9,1"
                    intensity="1.2"
                    castShadows="true" />
			</components>
		</entity>
		<entity id="Cube" name="Cube" position="0.000,0.000,0.000" rotation="-90.000,-0.000,0.000" scale="0.100,0.100,0.100">
			<components>
				<renderer meshId="cubeModel.Cube">
					<material slot="0" materialId="cubeModel.Material_001" />
					<material slot="1" materialId="cubeModel.Material" />
				</renderer>
			</components>
		</entity>

		<entity id="Body" name="Body" position="0.000,0.000,-7.889" rotation="0.000,-0.000,-90.000" scale="1.000,1.000,1.000">
			<components>
				<renderer meshId="tank_low_poly.Cube" materialId="tank_low_poly.Body" />
			</components>
			<children>

				<entity id="Turret" name="Turret" position="0.439,-0.000,52.973" rotation="0.000,-0.000,0.000" scale="1.000,1.000,1.000">
					<components>
						<renderer meshId="tank_low_poly.Cube_001" materialId="tank_low_poly.Body" />
					</components>
					<children>
						<entity id="Barrel" name="Barrel" position="32.227,-0.000,-6.563" rotation="0.000,-0.000,0.000" scale="1.000,1.000,1.000">
							<components>
								<renderer meshId="tank_low_poly.Cube_003" materialId="tank_low_poly.Body" />
							</components>
						</entity>
					</children>
				</entity>
				<entity id="Wheel_L06" name="Wheel_L06" position="-140.960,82.782,-4.681" rotation="0.000,-0.000,0.000" scale="1.000,1.000,1.000">
					<components>
						<renderer meshId="tank_low_poly.Cylinder_012" materialId="tank_low_poly.Body" />
					</components>
				</entity>
			</children>
		</entity>
	</entities>
</scene>